#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>
#include <behaviors/rgbled_widget.dtsi>

/ {
	kscan0: kscan {
		compatible = "zmk,kscan-gpio-charlieplex";
	};

    default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <16>;
		rows = <8>;
		
		map = <
		RC(0,6)   RC(1,6)   RC(2,6)   RC(3,6)   RC(4,6)   RC(5,6)       RC(0,14)  RC(1,14)  RC(2,14)  RC(3,14)  RC(4,14)  RC(5,14)  RC(0,13)  RC(1,13) RC(2,13)
		RC(0,5)   RC(1,5)   RC(2,5)   RC(3,5)   RC(4,5)   RC(6,5)       RC(3,13)  RC(4,13)  RC(6,13)  RC(0,12)  RC(1,12)  RC(2,12)  RC(3,12)  RC(5,12)
		RC(0,4)   RC(1,4)   RC(2,4)   RC(3,4)   RC(5,4)   RC(6,4)       RC(6,12)  RC(0,11)  RC(1,11)  RC(2,11)  RC(4,11)  RC(5,11)            RC(6,11)
		RC(0,3)   RC(1,3)   RC(2,3)   RC(4,3)   RC(5,3)   RC(6,3)       RC(0,10)  RC(1,10)  RC(3,10)  RC(4,10)  RC(5,10)  RC(6,10)            RC(0,9)
		RC(0,2)   RC(1,2)   RC(3,2)   RC(4,2)   RC(5,2)                 RC(2,9)                                                     RC(3,9)   RC(4,9)  RC(5,9)
		>;
	};
    
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
            row-gpios
                = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 			
                ;
            col-gpios
                = <&xiao_d 10 GPIO_ACTIVE_HIGH>
                , <&xiao_d 9 GPIO_ACTIVE_HIGH> 
                , <&xiao_d 8 GPIO_ACTIVE_HIGH> 
                , <&xiao_d 7 GPIO_ACTIVE_HIGH> 
                , <&gpio0 10 GPIO_ACTIVE_HIGH>
                ; 
    };

    //left hand trackball
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        trackball_peripheral_split: trackball_peripheral_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    trackball_peripheral_listener: trackball_peripheral_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackball_peripheral_split>;
        input-processors =
            <&zip_xy_transform INPUT_TRANSFORM_XY_SWAP>;       //this gets it to the default installation orientation
            //<&zip_temp_layer 5 500>,                         //オートマウスレイヤーの選択
    };
    
    //right hand trackball
    trackball_central_listener: trackball_central_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        input-processors = 
            <&zip_xy_transform INPUT_TRANSFORM_XY_SWAP>,        //this gets it to the default installation orientation
            <&zip_xy_scaler 1 7>,                               //感度を1/7倍に変更(スクロールが遅くなる)
            <&zip_xy_to_scroll_mapper>;                         //スクロールモードに変更
            //<&zip_scroll_transform INPUT_TRANSFORM_Y_INVERT>;   //invert vertical scrolling so that the view moves in the same direction as the top of the trackball.
    };
};