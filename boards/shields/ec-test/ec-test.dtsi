#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>
#include <behaviors/rgbled_widget.dtsi>

/ {
    chosen {
        zmk,sensors = &sensors;
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
    };

    encoder_left: encoder_left {
        compatible = "alps,ec11";
        label = "LEFT_ENCODER";
        a-gpios = <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // 左のピン
        b-gpios = <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // 左のピン
        steps = <4>;
        status = "disabled"; // ここでは無効にしておく
    };

    encoder_right: encoder_right {
        compatible = "alps,ec11";
        label = "RIGHT_ENCODER";
        a-gpios = <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // 右のピン
        b-gpios = <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // 右のピン
        steps = <4>;
        status = "disabled"; // ここでは無効にしておく
    };
};