#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define ZMK_POINTING_DEFAULT_MOVE_VAL 800
#define ZMK_POINTING_DEFAULT_SCRL_VAL 120
#include <dt-bindings/zmk/pointing.h>

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
    // =================================================
    // ▼▼▼ ここに「00」マクロを追加しました ▼▼▼
    // =================================================
    behaviors {
        double_zero: double_zero {
            compatible = "zmk,behavior-string";
            #binding-cells = <0>;
            string = "00";
        };
    };
    // =================================================

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp A &kp B &kp BACKSPACE    &kp ENTER
                &kp C &double_zero &kp SPACE &mo 1
            >;

            sensor-bindings = <
                &inc_dec_kp LEFT_ARROW RIGHT_ARROW,
                &inc_dec_kp UP_ARROW   DOWN_ARROW,
                &inc_dec_kp LEFT_ARROW RIGHT_ARROW,
                &inc_dec_kp UP_ARROW   DOWN_ARROW
            >;
        };

        bt_layer {
            bindings = <
                &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_CLR  &bt BT_CLR_ALL
                &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_NXT  &kp N0
            >;

            sensor-bindings = <
                &inc_dec_kp LEFT_ARROW RIGHT_ARROW,
                &inc_dec_kp UP_ARROW   DOWN_ARROW,
                &inc_dec_kp LEFT_ARROW RIGHT_ARROW,
                &inc_dec_kp UP_ARROW   DOWN_ARROW
            >;
        };
    };
};