#define ZMK_POINTING_DEFAULT_MOVE_VAL 800
#define ZMK_POINTING_DEFAULT_SCRL_VAL 120

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    // =================================================
    // あなたが見つけた公式ドキュメント通りの方法でマクロを定義します
    // =================================================

    macros {
        double_zero: double_zero {
            // 「高度なマクロ」機能を使います

            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;

            // ↓↓↓ これが高速化のキモです ↓↓↓
            // キー入力の間の待ち時間をゼロに設定

            wait-ms = <0>;

            // キーを押している時間をゼロに設定

            tap-ms = <0>;

            // 「0」のキーを2回タップする、という動作を定義します

            bindings = <&macro_tap>, <&kp N0 &kp N0>;
        };
    };

    // =================================================

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp A  &kp B         &kp BACKSPACE  &kp ENTER
&kp C  &double_zero  &kp SPACE      &mo 1
            >;

            sensor-bindings =
                <&inc_dec_kp A B>,
                <&inc_dec_kp C D>,
                <&inc_dec_kp E F>,
                <&inc_dec_kp G H>;
        };

        bt_layer {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_CLR  &bt BT_CLR_ALL
&bt BT_SEL 2  &bt BT_SEL 3  &bt BT_NXT  &kp N0
            >;

            sensor-bindings = <
                &inc_dec_kp LEFT_ARROW RIGHT_ARROW
                &inc_dec_kp UP_ARROW   DOWN_ARROW
                &inc_dec_kp LEFT_ARROW RIGHT_ARROW
                &inc_dec_kp UP_ARROW   DOWN_ARROW
            >;
        };
    };
};
